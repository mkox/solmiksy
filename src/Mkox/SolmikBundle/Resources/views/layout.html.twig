    {% block javascripts %}
        <script src="{{ asset(bPath ~ 'js/libs/require/require-2.1.15.js') }}" type="text/javascript" data-main="{{ asset(bPath ~ 'dist/js/config') }}"></script>
    {% endblock %}
    </body>
